<div class="container text-center">
    <div class="row">
        <div class="col" style="padding-top: 1rem;">
            <div class="card border-secondary mb-3">
                <div class="card-header">Cadastro de Postagens</div>
                <div class="card-body">

                    <h5 class="card-title"></h5>
                    <p class="card-text"></p>

                    <form action="/add" method="POST" enctype="multipart/form-data">


                        <div class="container">
                            <div class="row">


                                <div class="col-sm-5 col-md-6">
                                    <div class="mb-3">
                                        <label class="picture" tabIndex="0" for="picture-input">
                                            <input type="file" accept="image/*" name="imagem" id="picture-input"
                                                required>
                                            <span class="picture-image"></span>
                                            <script>
                                                const inputFile = document.querySelector('#picture-input');
                                                const pictureImage = document.querySelector('.picture-image');
                                                const pictureImageTxt = 'Escolha uma Imagem';
                                                pictureImage.innerHTML = pictureImageTxt;

                                                inputFile.addEventListener('change', function (e) {
                                                    const inputTarget = e.target;
                                                    const file = inputTarget.files[0];
                                                    if (file) {
                                                        const reader = new FileReader();

                                                        reader.addEventListener('load', function (e) {
                                                            const readerTarget = e.target;

                                                            const img = document.createElement('img');
                                                            img.src = readerTarget.result;
                                                            img.classList.add('picture-img');
                                                            pictureImage.innerHTML = '';

                                                            pictureImage.appendChild(img);
                                                        });

                                                        reader.readAsDataURL(file);
                                                    } else {
                                                        pictureImage.innerHTML = pictureImageTxt;
                                                    }

                                                });
                                            </script>
                                        </label>
                                    </div>
                                </div>

                                <div class="col-sm-5 offset-sm-2 col-md-6 offset-md-0 text-align-left">

                                    <div class="mb-3">
                                        <p>Titulo:</p> <input type="text" name="titulo"
                                            class="form-control form-control-lg" required>
                                    </div>

                                    <div class="mb-3">
                                        <p>Conte√∫do:</p> <textarea name="conteudo" class="form-control form-control-lg"
                                            required></textarea>
                                    </div>


                                    <a href="/" class="btn btn-danger"><i class="bi bi-backspace"></i> cancelar</a>
                                    <button type="submit" class="btn btn-success"><i class="bi bi-clipboard2-plus"></i>
                                        Cadastrar Postagem</button>
                                </div>
                            </div>
                        </div>






                    </form>

                </div>
            </div>
        </div>
    </div>
</div>