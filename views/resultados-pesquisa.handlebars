<div class="container text-center">
    <div class="row" style="padding-top:1rem;" id="posts">

        {{#if postagens.length}}
        {{#each postagens}}
        <div class="card mb-3">
            <div class="row g-0">
                <div class="col-md-4">
                    <img src="images/{{this.imagem}}" class="img-fluid rounded-start" alt="..." style="max-height:600px">
                </div>
                <div class="col-md-8">
                    <div class="card-body text-align-left">
                        <h5 class="card-title">{{this.titulo}}</h5>
                        <p class="card-text">{{this.conteudo}}</p>
                        <p class="card-text"><small class="text-body-secondary"><i
                                    class="bi bi-calendar-check-fill"></i> {{this.createdAt}}</small></p>

                        <a href="/deletar/{{this.id}}"><button class="btn btn-danger"><i class="bi bi-backspace"></i>
                                Deletar</button></a>

                        <a href="/alterar/{{this.id}}"><button class="btn btn-primary"><i class="bi bi-vector-pen"></i>
                                Alterar</button></a>

                    </div>
                </div>
            </div>
        </div>
        {{/each}}
        {{else}}
        <p>Nenhuma postagem encontrada.</p>
        {{/if}}

    </div>
</div>